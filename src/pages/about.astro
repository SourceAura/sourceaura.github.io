---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
// import Link from "@components/Link.astro";
import Connect from "@components/Connect.astro";
import BackToPrevious from "@components/BackToPrevious.astro";
import { SITE } from "@consts";
import { Image } from 'astro:assets';
import myPhoto from '../assets/may-be.png';

const skills = ['JavaScript', 'Python', 'Go Lang', 'TypeScript', 'React', 'Next.js', 'Astro', 'Tailwind CSS', 'HTML', 'CSS', 'SQL', 'PostgreSQL', 'MongoDB', 'Docker', 'Kubernetes', 'AWS', 'Azure', 'Git', 'GitHub', 'GitLab', 'Bitbucket', 'Linux', 'Windows'];
---

<style is:global>
  .skills-ticker {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
    max-width: 100vw;
  }

  .skills-ticker-content {
    display: inline-block;
    animation: ticker 30s linear infinite;
  }

  @keyframes ticker {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  .skill-pill {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    margin: 0.25rem;
    border-radius: 9999px;
    background-color: rgba(255, 255, 255, 0.1);
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    border: 1px solid #000;
    font-size: 0.875rem;
  }

  .dark .skill-pill {
    background-color: rgba(0, 0, 0, 0.1);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    border-color: #fff;
  }

  @media (max-width: 640px) {
    .skill-pill {
      padding: 0.2rem 0.5rem;
      font-size: 0.75rem;
    }
  }
</style>

<Layout title="About Me" description={SITE.DESCRIPTION}>
  <Container>
    <div class="flex flex-col items-center justify-center min-h-screen py-12 px-4">
      <div class="w-full max-w-2xl mx-auto text-center">
        <Image 
          src={myPhoto} 
          alt={SITE.TITLE} 
          width={192} 
          height={192} 
          class="rounded-full object-cover mx-auto mb-8"
        />
        
        <div class="skills-ticker mb-8">
          <div class="skills-ticker-content">
            {skills.map((skill) => (
              <span class="skill-pill">{skill}</span>
            ))}
          </div>
        </div>
        
        <Connect />
      </div>
    </div>
  </Container>
</Layout>