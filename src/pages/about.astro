---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
// import Link from "@components/Link.astro";
import Connect from "@components/Connect.astro";
import BackToPrevious from "@components/BackToPrevious.astro";
import { SITE } from "@consts";
import { Image } from 'astro:assets';
import myPhoto from '../assets/may-be.png';

const skills = ['JavaScript', 'Python', 'Go Lang', 'TypeScript', 'React', 'Next.js', 'Astro', 'Tailwind CSS', 'HTML', 'CSS', 'SQL', 'PostgreSQL', 'MongoDB', 'Docker', 'Kubernetes', 'AWS', 'Azure', 'Git', 'GitHub', 'GitLab', 'Bitbucket', 'Linux', 'Windows'];
---

<style is:global>
  .skills-ticker {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
  }

  .skills-ticker-content {
    display: inline-block;
    animation: ticker 30s linear infinite;
  }

  @keyframes ticker {
    0% { transform: translateX(100%); }
    100% { transform: translateX(-100%); }
  }

  .skill-pill {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    margin: 0 0.5rem;
    border-radius: 9999px;
    background-color: rgba(255, 255, 255, 0.1);
    box-shadow: 0 0 5px rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    border: 1px solid #000;
  }

  .dark .skill-pill {
    background-color: rgba(0, 0, 0, 0.1);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
    border-color: #fff;
  }
</style>

<Layout title="About Me" description={SITE.DESCRIPTION}>
  <Container>
    <div class="mt-16 grid place-items-center gap-8">
      <Image src={myPhoto} alt={SITE.TITLE} width={192} height={192} class="rounded-full object-cover" />
      
      <div class="text-center max-w-2xl">
        <!-- <h1 class="text-3xl font-bold mb-4">no:body</h1> -->
        <!-- <p class="text-xl mb-6">An ever-budding Software Designer with an eye for multi-user accessibility.</p> -->
        
        <!-- <h2 class="text-2xl font-semibold mb-3">Skills</h2> -->
        <div class="skills-ticker w-full mb-6">
          <div class="skills-ticker-content">
            {skills.map((skill) => (
              <span class="skill-pill">{skill}</span>
            ))}
          </div>
        </div>
        
        <!-- <p class="mb-6">
          When I'm not exploring code and things, I'm usually writing poetry ‚úçÔ∏è, painting üé®, or practicing guitar üé∏.
        </p> -->
        
        <Connect />
      <!-- <BackToPrevious href="/">Home</BackToPrevious> -->
    </div>
  </Container>
</Layout>