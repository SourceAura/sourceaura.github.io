---
import { type CollectionEntry, getCollection } from "astro:content";
import PetalLayout from "@layouts/PetalLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import Giscus from "@components/Giscus.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("petals"))
    .filter((post) => !post.data.draft)
    .sort(
      (a, b) =>
        new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
    );

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<"petals">;

const posts = await getCollection("petals");
const sortedPosts = posts
  .filter((post) => !post.data.draft)
  .sort(
    (a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf(),
  );

function getAdjacentPost(offset: number) {
  const currentIndex = sortedPosts.findIndex(
    (post: CollectionEntry<"petals">) => post.slug === Astro.params.slug,
  );
  return sortedPosts[currentIndex + offset];
}

const nextPost = getAdjacentPost(1);
const prevPost = getAdjacentPost(-1);

const post = Astro.props;
const { Content } = await post.render();
---

<PetalLayout
  title={post.data.title}
  description={post.data.description}
  prevPost={prevPost
    ? {
        slug: `/${prevPost.collection}/${prevPost.slug}`,
        title: prevPost.data.title,
      }
    : undefined}
  nextPost={nextPost
    ? {
        slug: `/${nextPost.collection}/${nextPost.slug}`,
        title: nextPost.data.title,
      }
    : undefined}
>
  <Container>
    <div class="mx-auto max-w-3xl">
      <!-- SEARCHABLE CONTENT -->
      <article class="mt-8" data-pagefind-body>
        <h1 class="mb-4 text-3xl font-semibold">
          {post.data.title}
        </h1>

        <div class="mb-4 text-sm text-gray-600 dark:text-gray-400">
          <FormattedDate date={new Date(post.data.date)} />
          <span class="mx-2">â€¢</span>
          <span>{readingTime(post.body)} min read</span>
        </div>

        <div class="prose max-w-none dark:prose-invert">
          <Content />
        </div>
      </article>

      <div class="mt-12">
        <Giscus />
      </div>
    </div>
  </Container>
</PetalLayout>
