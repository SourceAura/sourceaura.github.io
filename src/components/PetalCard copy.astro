---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
import { readingTime } from "@lib/utils";

interface Props {
  post: CollectionEntry<"petals">;
}

const { post } = Astro.props;
const { title, description, date } = post.data;

let imageSrc: string | null = null;
const imageRegex = /!\[.*?\]\((.*?)\)/;
const match = post.body.match(imageRegex);
if (match && match[1]) {
  imageSrc = match[1].startsWith("http") ? match[1] : `/src/assets/${match[1]}`;
}
---

<div
  class="petal-card group relative h-full overflow-hidden rounded-lg shadow-lg transition-all duration-300"
  data-petal-card
>
  <a href={`/petals/${post.slug}/`} class="block h-full w-full">
    <div class="absolute inset-0 h-full w-full bg-transparent">
      {
        imageSrc ? (
          <Image
            src={imageSrc}
            alt={`Image for ${title}`}
            width={300}
            height={200}
            class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-110 group-active:scale-110"
          />
        ) : (
          <div class="h-full w-full bg-transparent" />
        )
      }
    </div>

    <div
      class="relative flex h-full flex-col justify-between bg-black bg-opacity-50 p-1 text-white transition-opacity duration-300 group-hover:bg-opacity-70 group-active:bg-opacity-70"
    >
      <div>
        <h2 class="mb-0.5 line-clamp-1 text-xs font-bold">{title}</h2>
        <p class="mb-1 line-clamp-2 text-xs">{description}</p>
      </div>
      <div
        class="text-xs opacity-0 transition-opacity duration-300 group-hover:opacity-100 group-active:opacity-100"
      >
        <FormattedDate date={new Date(date)} />
        <span class="mx-0.5">•</span>
        <span>{readingTime(post.body)}</span>
      </div>
    </div>
  </a>
</div>

<style>
  .petal-card {
    transition: box-shadow 0.3s ease;
    touch-action: manipulation; /* ✅ allows taps without breaking scroll/gestures */
    user-select: none;
  }

  .petal-card:hover,
  .petal-card:active {
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    z-index: 10;
  }
</style>
