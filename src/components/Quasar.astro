<quasar-background></quasar-background>

<style is:global>
  quasar-background {
    position: fixed;
    inset: 0;
    width: 100vw;
    height: 100dvh; /* critical for mobile dynamic viewport */
    z-index: -1;
    pointer-events: none;
    overflow: hidden;
    display: block;
  }

  quasar-background canvas {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    display: block;
  }
</style>

<script>
  const COUNT = 210;
  const SPEED = 0.05;
  const MAX_DT = 2;

  class Star {
    constructor(cx, cy, spread) {
      this.cx = cx;
      this.cy = cy;
      this.spread = spread;
      this.reset();
    }

    reset() {
      this.x = this.cx + (Math.random() - 0.5) * this.spread;
      this.y = this.cy + (Math.random() - 0.5) * this.spread;
      this.z = Math.random();
      this.xPrev = this.x;
      this.yPrev = this.y;
    }

    update(speed, dt) {
      this.xPrev = this.x;
      this.yPrev = this.y;

      this.z += speed * 0.07 * dt;
      this.x += (this.x - this.cx) * speed * this.z * dt;
      this.y += (this.y - this.cy) * speed * this.z * dt;

      const half = this.spread / 2;
      if (
        this.x < this.cx - half ||
        this.x > this.cx + half ||
        this.y < this.cy - half ||
        this.y > this.cy + half
      ) {
        this.reset();
      }
    }

    draw(ctx, light) {
      const a = Math.min(this.z, 1);
      ctx.strokeStyle = light ? `rgba(0,0,0,${a})` : `rgba(255,255,255,${a})`;
      ctx.lineWidth = Math.min(this.z * 0.6, 2);
      ctx.beginPath();
      ctx.moveTo(this.xPrev, this.yPrev);
      ctx.lineTo(this.x, this.y);
      ctx.stroke();
    }
  }

  class QuasarBackground extends HTMLElement {
    constructor() {
      super();
      this.canvas = document.createElement("canvas");
      this.ctx = this.canvas.getContext("2d");
      this.stars = [];
      this.lastTime = 0;
      this.isLight = false;

      this.resize = this.resize.bind(this);
      this.frame = this.frame.bind(this);
    }

    connectedCallback() {
      this.appendChild(this.canvas);

      // Mobile-safe resize handling
      if (window.visualViewport) {
        window.visualViewport.addEventListener("resize", this.resize);
      }
      window.addEventListener("resize", this.resize);
      window.addEventListener("orientationchange", this.resize);

      this.watchTheme();
      this.resize();

      this.lastTime = performance.now();
      requestAnimationFrame(this.frame);
    }

    disconnectedCallback() {
      if (window.visualViewport) {
        window.visualViewport.removeEventListener("resize", this.resize);
      }
      window.removeEventListener("resize", this.resize);
      window.removeEventListener("orientationchange", this.resize);
    }

    resize() {
      const vv = window.visualViewport;
      const width = vv ? vv.width : window.innerWidth;
      const height = vv ? vv.height : window.innerHeight;

      const dpr = Math.min(window.devicePixelRatio || 1, 2);

      this.canvas.width = Math.floor(width * dpr);
      this.canvas.height = Math.floor(height * dpr);

      this.ctx.setTransform(dpr, 0, 0, dpr, 0, 0);

      const cx = width / 2;
      const cy = height / 2;
      const spread = Math.max(width, height) * 1.4;

      this.stars = Array.from(
        { length: COUNT },
        () => new Star(cx, cy, spread),
      );
    }

    watchTheme() {
      const update = () => {
        this.isLight = document.documentElement.classList.contains("light");
      };

      update();
      new MutationObserver(update).observe(document.documentElement, {
        attributes: true,
        attributeFilter: ["class"],
      });
    }

    frame(t) {
      const dt = Math.min((t - this.lastTime) / 16.67, MAX_DT);
      this.lastTime = t;

      this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);

      for (const s of this.stars) {
        s.update(SPEED, dt);
        s.draw(this.ctx, this.isLight);
      }

      requestAnimationFrame(this.frame);
    }
  }

  if (!customElements.get("quasar-background")) {
    customElements.define("quasar-background", QuasarBackground);
  }
</script>
