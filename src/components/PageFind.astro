---
import { Calendar } from "@/components/ui/calendar";
import Search from "astro-pagefind/components/Search";

// Navigation pages injected into results
const navigationPages = [
  { title: "Home", url: "/" },
  { title: "Petals", url: "/petals" },
  { title: "About", url: "/about" },
  { title: "404", url: "/404" },
];
---

<div
  transition:persist
  id="backdrop"
  class="invisible fixed inset-0 z-50 flex h-screen w-full justify-center bg-[rgba(0,0,0,0.5)] p-6 backdrop-blur-sm"
>
  <div
    id="pagefind-container"
    class="relative flex h-fit max-h-[80%] w-full max-w-screen-sm flex-col overflow-auto rounded border border-black/15 p-4 shadow-lg dark:border-white/20"
  >
    <!-- âœ… Correct renderer hint -->
    <Search
      id="search"
      className="pagefind-ui"
      client:only="preact"
      uiOptions={{
        showImages: true,
        excerptLength: 16,
        resetStyles: false,
      }}
    />

    <div class="mt-4 flex justify-between">
      <Calendar />
    </div>

    <div class="mt-3 text-right text-xs dark:prose-invert">
      Press <kbd>Esc</kbd>
    </div>

    <div id="time-display" class="mt-2 text-left text-xs">
      Time: <span id="current-time"></span>
    </div>
  </div>
</div>

<script client:load define:vars={{ navigationPages }}>
  const ase = document.getElementById("ase");
  const backdrop = document.getElementById("backdrop");

  function openPagefind() {
    backdrop?.classList.remove("invisible");
    backdrop?.classList.add("visible");
    setTimeout(() => {
      document.querySelector(".pagefind-ui__search-input")?.focus();
    }, 0);
  }

  function closePagefind() {
    const input = document.querySelector(".pagefind-ui__search-input");
    if (input) input.value = "";
    backdrop?.classList.remove("visible");
    backdrop?.classList.add("invisible");
  }

  ase?.addEventListener("click", openPagefind);

  document.addEventListener("keydown", (e) => {
    if (e.key === "/" || ((e.metaKey || e.ctrlKey) && e.key === "k")) {
      e.preventDefault();
      openPagefind();
    }
    if (e.key === "Escape") closePagefind();
  });

  backdrop?.addEventListener("click", (e) => {
    if (!e.target.closest("#pagefind-container")) closePagefind();
  });

  function updateTime() {
    const el = document.getElementById("current-time");
    if (el) el.textContent = new Date().toLocaleTimeString();
  }

  updateTime();
  setInterval(updateTime, 1000);
</script>

<style is:global>
  .pagefind-ui,
  .pagefind-ui * {
    background: transparent !important;
  }

  .pagefind-ui__search-input {
    background: transparent !important;
    border: none !important;
    outline: none !important;
  }

  .pagefind-ui__results,
  .pagefind-ui__result,
  .pagefind-ui__message {
    background: transparent !important;
    box-shadow: none !important;
  }

  .pagefind-ui__result-title {
    font-weight: 600;
  }

  .pagefind-ui__result-excerpt mark {
    background: transparent;
    outline: 1px solid currentColor;
    outline-offset: 1px;
    border-radius: 2px;
    mix-blend-mode: difference;
  }

  :root {
    --pagefind-ui-scale: 0.75;
    --pagefind-ui-font: "Geist", sans-serif;
    --pagefind-ui-primary: transparent;
    --pagefind-ui-background: transparent;
    --pagefind-ui-border: transparent;
    --pagefind-ui-text: #3d3d3d;
  }

  .dark {
    --pagefind-ui-text: #d4d4d4;
  }
</style>
