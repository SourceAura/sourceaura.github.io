---
import Search from "astro-pagefind/components/Search";
import NowPlaying from "@/components/NowPlaying.astro";
import { Calendar } from "@/components/ui/calendar";

// Define your navigation pages
const navigationPages = [
  { title: "Home", url: "/" },
  { title: "Petals", url: "/petals" },
  { title: "About", url: "/about" },
  { title: "404", url: "/404" },
];
---

<div
  transition:persist
  id="backdrop"
  class="invisible fixed left-0 top-0 z-50 flex h-screen w-full justify-center bg-[rgba(0,0,0,0.5)] p-6 backdrop-blur-sm"
>
  <div
    id="pagefind-container"
    class="relative m-0 flex h-fit max-h-[80%] w-full max-w-screen-sm flex-col overflow-auto rounded border border-black/15 bg-neutral-100 p-2 px-4 py-3 shadow-lg dark:border-white/20 dark:bg-neutral-900"
  >
    <Search
      id="search"
      className="pagefind-ui"
      uiOptions={{
        showImages: true,
        excerptLength: 16,
        resetStyles: false,
      }}
    />

    <div class="flex justify-between gap-4">
      <div id="calendar-container" class="mb-4">
        <!-- ðŸš¨ FIX: Calendar is browser-only -->
        <Calendar client:only="react" />
      </div>

      <NowPlaying />
    </div>

    <div class="mt-2 text-right text-xs dark:prose-invert">
      Press <kbd>Esc</kbd>
    </div>

    <div id="time-display" class="mb-4 text-left">
      <p>Time: <span id="current-time"></span></p>
    </div>
  </div>
</div>

<script define:vars={{ navigationPages }}>
  const backdrop = document.getElementById("backdrop");

  function openPagefind() {
    const searchDiv = document.getElementById("search");
    const search = searchDiv?.querySelector("input");
    setTimeout(() => search?.focus(), 0);
    backdrop?.classList.remove("invisible");
    backdrop?.classList.add("visible");
  }

  function closePagefind() {
    const search = document.querySelector("#search input");
    if (search) search.value = "";
    backdrop?.classList.remove("visible");
    backdrop?.classList.add("invisible");
  }

  document.addEventListener("keydown", (e) => {
    if (e.key === "/" || ((e.metaKey || e.ctrlKey) && e.key === "k")) {
      e.preventDefault();
      openPagefind();
    }
    if (e.key === "Escape") closePagefind();
  });

  backdrop?.addEventListener("click", (event) => {
    if (!event.target.closest("#pagefind-container")) {
      closePagefind();
    }
  });

  function debounce(fn, wait) {
    let timeout;
    return (...args) => {
      clearTimeout(timeout);
      timeout = setTimeout(() => fn(...args), wait);
    };
  }

  function customSearch(query) {
    const lowercaseQuery = query.toLowerCase();
    const matches = navigationPages.filter((page) =>
      page.title.toLowerCase().includes(lowercaseQuery),
    );

    const results = document.querySelector(".pagefind-ui__results");
    if (!results) return;

    results.querySelectorAll(".navigation-result").forEach((el) => el.remove());

    matches.forEach((page) => {
      const div = document.createElement("div");
      div.className = "pagefind-ui__result navigation-result";
      div.innerHTML = `
        <h3 class="pagefind-ui__result-title">
          <a href="${page.url}">${page.title}</a>
        </h3>
        <p class="pagefind-ui__result-excerpt">
          Navigate to ${page.title}
        </p>
      `;
      results.prepend(div);
    });
  }

  window.addEventListener("load", () => {
    const input = document.querySelector(".pagefind-ui__search-input");
    if (!input) return;
    const debounced = debounce(customSearch, 300);
    input.addEventListener("input", (e) => debounced(e.target.value));
  });

  function updateTime() {
    const el = document.getElementById("current-time");
    if (el) el.textContent = new Date().toLocaleTimeString();
  }

  updateTime();
  setInterval(updateTime, 1000);
</script>

<style is:global>
  :root {
    --pagefind-ui-scale: 0.75;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 3px;
    --pagefind-ui-font: "Geist", sans-serif;
    --pagefind-ui-primary: transparent;
    --pagefind-ui-text: #3d3d3d;
    --pagefind-ui-background: transparent;
    --pagefind-ui-border: #d0d0d0;
  }

  .dark {
    --pagefind-ui-text: #d4d4d4;
    --pagefind-ui-border: #404040;
  }

  #pagefind-container {
    background: transparent;
  }

  #search .pagefind-ui__result-excerpt mark {
    background-color: transparent;
    outline: 1px solid currentColor;
    border-radius: 2px;
    mix-blend-mode: difference;
  }
</style>
