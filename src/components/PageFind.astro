---
import { Calendar } from "@/components/ui/calendar";
import Search from "astro-pagefind/components/Search";
// import NowPlaying from "@/components/NowPlaying.astro";

// Define your navigation pages
const navigationPages = [
  { title: "Home", url: "/" },
  { title: "Petals", url: "/petals" },
  { title: "About", url: "/about" },
  { title: "404", url: "/404" },
];
---

<div
  transition:persist
  id="backdrop"
  class="invisible fixed left-0 top-0 z-50 flex h-screen w-full justify-center bg-[rgba(0,0,0,0.5)] p-6 backdrop-blur-sm"
>
  <div
    id="pagefind-container"
    class="relative m-0 flex h-fit max-h-[80%] w-full max-w-screen-sm flex-col overflow-auto rounded border border-black/15 bg-neutral-100 p-4 shadow-lg dark:border-white/20 dark:bg-neutral-900"
  >
    <!-- âœ… FIX: client:load prevents Pagefind UI race condition -->
    <Search
      id="search"
      className="pagefind-ui"
      client:load
      uiOptions={{
        showImages: true,
        excerptLength: 16,
        resetStyles: false,
      }}
    />

    <div class="mt-4 flex justify-between">
      <div id="calendar-container">
        <Calendar />
      </div>
      <!-- <NowPlaying /> -->
    </div>

    <div class="mt-4 text-right text-xs dark:prose-invert">
      Press <kbd>Esc</kbd>
    </div>

    <div id="time-display" class="mt-2 text-left">
      <p>Time: <span id="current-time"></span></p>
    </div>
  </div>
</div>

<script define:vars={{ navigationPages }}>
  const ase = document.getElementById("ase");
  const backdrop = document.getElementById("backdrop");

  function openPagefind() {
    const searchInput = document.querySelector(".pagefind-ui__search-input");
    backdrop?.classList.remove("invisible");
    backdrop?.classList.add("visible");
    setTimeout(() => searchInput?.focus(), 0);
  }

  function closePagefind() {
    const searchInput = document.querySelector(".pagefind-ui__search-input");
    if (searchInput) searchInput.value = "";
    backdrop?.classList.remove("visible");
    backdrop?.classList.add("invisible");
  }

  ase?.addEventListener("click", openPagefind);

  document.addEventListener("keydown", (e) => {
    if (e.key === "/" || ((e.metaKey || e.ctrlKey) && e.key === "k")) {
      e.preventDefault();
      openPagefind();
    }
    if (e.key === "Escape") {
      closePagefind();
    }
  });

  backdrop?.addEventListener("click", (e) => {
    if (!e.target.closest("#pagefind-container")) {
      closePagefind();
    }
  });

  // Update the current time every second
  function updateTime() {
    document.getElementById("current-time").textContent =
      new Date().toLocaleTimeString();
  }
  updateTime();
  setInterval(updateTime, 1000);
</script>

<style is:global>
  :root {
    --pagefind-ui-scale: 0.75;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 3px;
    --pagefind-ui-font: "Geist", sans-serif;
    --pagefind-ui-primary: transparent;
    --pagefind-ui-text: #3d3d3d;
    --pagefind-ui-background: transparent;
    --pagefind-ui-border: #d0d0d0;
  }

  .dark {
    --pagefind-ui-text: #d4d4d4;
    --pagefind-ui-border: #404040;
  }

  #search input {
    background: transparent;
    font-weight: normal;
  }

  #search .pagefind-ui__result-title {
    font-weight: 600;
  }

  #search .pagefind-ui__result-excerpt mark {
    background-color: transparent;
    outline: 1px solid currentColor;
    outline-offset: 1px;
    border-radius: 2px;
    mix-blend-mode: difference;
  }
</style>
