---
import Search from "astro-pagefind/components/Search";

const navigationPages = [
  { title: "Home", url: "/" },
  { title: "Petals", url: "/petals" },
  { title: "About", url: "/about" },
  { title: "404", url: "/404" },
];
---

<div
  transition:persist
  id="backdrop"
  class="invisible fixed left-0 top-0 z-50 flex h-screen w-full justify-center p-6 backdrop-blur-sm"
>
  <div
    id="pagefind-container"
    class="relative m-0 flex h-fit max-h-[80%] w-full max-w-screen-sm flex-col overflow-auto rounded border border-black/15 bg-neutral-100 p-2 px-4 py-3 shadow-lg dark:border-white/20 dark:bg-neutral-900"
  >
    <Search
      id="search"
      className="pagefind-ui"
      uiOptions={{
        showImages: true,
        excerptLength: 16,
        resetStyles: false,
      }}
    />

    <div class="mt-2 text-right text-xs dark:prose-invert">
      Press <kbd>Esc</kbd> to close
    </div>

    <div id="time-display" class="mb-4 text-left">
      <p>Time: <span id="current-time"></span></p>
    </div>
  </div>
</div>

<script define:vars={{ navigationPages }}>
  const backdrop = document.getElementById("backdrop");

  function openPagefind() {
    const input = document.querySelector(".pagefind-ui__search-input");
    backdrop?.classList.remove("invisible");
    backdrop?.classList.add("visible");
    requestAnimationFrame(() => input?.focus());
  }

  function closePagefind() {
    const input = document.querySelector(".pagefind-ui__search-input");
    if (input) input.value = "";
    backdrop?.classList.remove("visible");
    backdrop?.classList.add("invisible");
  }

  // ✅ EXPOSE GLOBAL FUNCTION (this is the missing piece)
  window.openPagefind = openPagefind;

  // ✅ ALSO LISTEN FOR EVENT
  window.addEventListener("open-pagefind", openPagefind);

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") closePagefind();
    if (e.key === "/" || ((e.metaKey || e.ctrlKey) && e.key === "k")) {
      e.preventDefault();
      openPagefind();
    }
  });

  backdrop?.addEventListener("click", (e) => {
    if (!e.target.closest("#pagefind-container")) {
      closePagefind();
    }
  });

  function updateTime() {
    document.getElementById("current-time").textContent =
      new Date().toLocaleTimeString();
  }
  updateTime();
  setInterval(updateTime, 1000);
</script>

<style is:global>
  :root {
    --pagefind-ui-scale: 0.75;
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 6px;
    --pagefind-ui-font: "Geist", sans-serif;

    /* Transparent theme */
    --pagefind-ui-primary: transparent;
    --pagefind-ui-background: transparent;
    --pagefind-ui-text: rgba(255, 255, 255, 0.85);
    --pagefind-ui-border: rgba(255, 255, 255, 0.15);
    --pagefind-ui-tag: transparent;
  }

  .light {
    --pagefind-ui-text: rgba(0, 0, 0, 0.75);
    --pagefind-ui-border: rgba(0, 0, 0, 0.15);
  }

  /* Container stays invisible */
  #pagefind-container {
    background: transparent !important;
    box-shadow: none !important;
    backdrop-filter: none;
  }

  /* Input */
  #search input {
    background: transparent !important;
    color: inherit;
    font-weight: normal;
  }

  /* Results */
  .pagefind-ui__result {
    background: transparent;
  }

  .pagefind-ui__result-title {
    font-weight: 500;
  }

  .pagefind-ui__message {
    padding-bottom: 0.75rem;
  }

  /* Highlight effect */
  #search .pagefind-ui__result-excerpt mark {
    background-color: transparent;
    outline: 1px solid currentColor;
    outline-offset: 1px;
    border-radius: 3px;
    color: inherit;
    mix-blend-mode: difference;
  }
</style>
