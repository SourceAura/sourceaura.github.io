---
/* Nelumbo
Rose Lotus - Rotating LED Display.
Nelumbo displays a 3D carousel of petals + a HUD.

Updates:
- Carousel hidden by default, toggled by Qi.astro click
- HUD opens ONLY on long press
- Orbs ~20% smaller
- Petals never distort/stretch (counter-rotate surface to face camera)
- HUD docked under PageFind input (#hud-dock)
- NEW: Side “card scanner” lines pulse when an orb crosses the fade boundary (scan out/in)
*/
import Orb from "@components/Orb.astro";
const { posts } = Astro.props;
import "@styles/nelumbo.css";

function extractFirstImageFromMarkdown(md = ""): string | null {
  const m = md.match(/!\[.*?\]\((.*?)\)/);
  if (!m?.[1]) return null;
  const raw = String(m[1]).trim();
  if (raw.startsWith("http") || raw.startsWith("/")) return raw;
  return `/images/${raw.replace(/^\.?\//, "")}`;
}

function stripMarkdownToText(md = ""): string {
  let t = String(md);

  t = t.replace(/^---[\s\S]*?---\s*/g, "");
  t = t.replace(/!\[([^\]]*)\]\([^)]+\)/g, "$1");
  t = t.replace(/\[([^\]]+)\]\(([^)]+)\)/g, "$1");
  t = t.replace(/`([^`]+)`/g, "$1");
  t = t.replace(/^\s{0,3}#{1,6}\s+/gm, "");
  t = t.replace(/^\s{0,3}>\s?/gm, "");
  t = t.replace(/^\s*[-*+]\s+/gm, "");
  t = t.replace(/^\s*\d+\.\s+/gm, "");
  t = t.replace(/(\*\*|__)(.*?)\1/g, "$2");
  t = t.replace(/(\*|_)(.*?)\1/g, "$2");
  t = t.replace(/^\s{0,3}(-{3,}|\*{3,}|_{3,})\s*$/gm, "");
  t = t.replace(/\n{3,}/g, "\n\n");

  return t.trim();
}

function readingTimeMinutes(md = ""): string {
  const words = stripMarkdownToText(md).split(/\s+/).filter(Boolean).length;
  const mins = Math.max(1, Math.round(words / 200));
  return `${mins} min`;
}

function formatDate(d: any): string {
  try {
    const date = new Date(d);
    if (Number.isNaN(date.getTime())) return "";
    return date.toLocaleDateString(undefined, {
      month: "2-digit",
      day: "2-digit",
      year: "numeric",
    });
  } catch {
    return "";
  }
}
---

<div class="carousel-layer" id="petal-shell" hidden aria-hidden="true">
  <div class="carousel-viewport">
    <div class="carousel-ring" id="petal-ring">
      {
        posts.map((post, i) => {
          const img = extractFirstImageFromMarkdown(post.body) ?? "";
          const articleText = stripMarkdownToText(post.body);
          const dateLabel = formatDate(post.data.date);
          const rt = readingTimeMinutes(post.body);

          return (
            <div
              class="carousel-item"
              tabindex="0"
              data-index={i}
              data-href={`/petals/${post.slug}`}
              data-title={post.data.title}
              data-desc={post.data.description}
              data-img={img}
              data-article={articleText}
              data-date={dateLabel}
              data-rt={rt}
            >
              <div class="parallax-layer">
                <div class="petal-surface" data-petal-surface>
                  <Orb post={post} />
                  <div class="petal-content">
                    <h1>{post.data.title}</h1>
                    <p>{post.data.description}</p>
                  </div>
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
  </div>

  <!-- Side scanner rails (BACK = outer beams behind orb) -->
  <div class="petal-scanners petal-scanners-back" aria-hidden="true">
    <div class="petal-scan-wrap petal-scan-left petal-scan-outer">
      <div class="petal-scan" data-scan-side="left" data-scan-depth="back">
        <!-- exactly ONE beam element per side layer -->
        <span class="petal-beam"></span>
      </div>
    </div>

    <div class="petal-scan-wrap petal-scan-right petal-scan-outer">
      <div class="petal-scan" data-scan-side="right" data-scan-depth="back">
        <span class="petal-beam"></span>
      </div>
    </div>
  </div>

  <!-- Side scanner rails (FRONT = inner beams in front of orb) -->
  <div class="petal-scanners petal-scanners-front" aria-hidden="true">
    <div class="petal-scan-wrap petal-scan-left petal-scan-inner">
      <div
        class="petal-scan"
        id="petal-scan-left"
        data-scan-side="left"
        data-scan-depth="front"
      >
        <span class="petal-beam"></span>
      </div>
    </div>

    <div class="petal-scan-wrap petal-scan-right petal-scan-inner">
      <div
        class="petal-scan"
        id="petal-scan-right"
        data-scan-side="right"
        data-scan-depth="front"
      >
        <span class="petal-beam"></span>
      </div>
    </div>
  </div>

  <!-- HUD Overlay (DOCKED under PageFind input) -->
  <div class="hud" id="petal-hud" aria-hidden="true">
    <div class="hud-frame">
      <div class="hud-seg hud-mediaStats">
        <div class="hud-media-wrap">
          <img data-hud-img alt="" />
          <div class="hud-scan" aria-hidden="true"></div>

          <div class="hud-titleOverlay" aria-hidden="true">
            <div class="hud-titleText" data-hud-title></div>
          </div>

          <div class="hud-chips" aria-label="Post stats">
            <div class="hud-chip">
              <span class="hud-chip-k">DATE</span>
              <span class="hud-chip-v" data-hud-date></span>
            </div>
            <div class="hud-chip">
              <span class="hud-chip-k">READ</span>
              <span class="hud-chip-v" data-hud-rt></span>
            </div>
          </div>
        </div>

        <div class="hud-desc" data-hud-desc></div>
      </div>

      <div class="hud-seg hud-article">
        <div class="hud-sub">ARTICLE</div>
        <div class="hud-article-body" data-hud-article></div>
      </div>

      <div class="hud-controls" aria-label="HUD controls">
        <a
          class="hud-ctl hud-open"
          data-hud-link
          href="#"
          aria-label="Open post"
        >
          ↗
        </a>
      </div>

      <button
        class="hud-close"
        type="button"
        id="hud-close"
        aria-label="Close HUD"
      >
        ×
      </button>

      <div class="hud-glow" aria-hidden="true"></div>
      <div class="hud-specks" aria-hidden="true"></div>
      <div class="hud-signalNoise" aria-hidden="true"></div>
    </div>
  </div>
</div>

<script is:inline>
  const shell = document.getElementById("petal-shell");
  const ring = document.getElementById("petal-ring");
  const items = ring ? [...ring.querySelectorAll(".carousel-item")] : [];

  // Front beams keep ids (used for particles + default pulse target)
  const scanL = document.getElementById("petal-scan-left");
  const scanR = document.getElementById("petal-scan-right");

  // Back beams (outer, behind orbs)
  const scanBackLeft = document.querySelector(
    '.petal-scanners-back [data-scan-side="left"]',
  );
  const scanBackRight = document.querySelector(
    '.petal-scanners-back [data-scan-side="right"]',
  );

  const hud = document.getElementById("petal-hud");
  const hudClose = document.getElementById("hud-close");

  const hudTitle = hud?.querySelector("[data-hud-title]");
  const hudImg = hud?.querySelector("[data-hud-img]");
  const hudDesc = hud?.querySelector("[data-hud-desc]");
  const hudArticle = hud?.querySelector("[data-hud-article]");
  const hudDate = hud?.querySelector("[data-hud-date]");
  const hudRT = hud?.querySelector("[data-hud-rt]");
  const hudLink = hud?.querySelector("[data-hud-link]");

  const count = items.length;
  const step = count ? 360 / count : 360;

  const getHudDock = () =>
    document.getElementById("hud-dock") ||
    document.querySelector("[data-hud-dock]");

  let petalsOpen = false;

  function updatePetalVisibility() {
    if (!shell) return;
    shell.hidden = !petalsOpen;
    shell.toggleAttribute("data-petals-open", petalsOpen);
    shell.setAttribute("aria-hidden", petalsOpen ? "false" : "true");
    if (!petalsOpen) focusedIndex = -1;
  }

  let hudOpen = false;
  let hudBootToken = 0;

  function setHudOpen(next) {
    hudOpen = !!next;
    if (!hud) return;

    hud.classList.toggle("is-open", hudOpen);
    hud.setAttribute("aria-hidden", hudOpen ? "false" : "true");

    if (hudOpen) {
      hudBootToken = (hudBootToken + 1) % 1000;
      hud.dataset.boot = String(hudBootToken);

      hud.classList.remove("is-booting");
      void hud.offsetWidth;
      hud.classList.add("is-booting");

      snapHudToDock(true);
    }
  }

  function closeHud() {
    setHudOpen(false);
  }

  hudClose?.addEventListener("click", (e) => {
    e.preventDefault();
    e.stopPropagation();
    closeHud();
  });

  window.addEventListener("keydown", (e) => {
    if (e.key !== "Escape") return;
    if (hudOpen) closeHud();
  });

  function closePetals() {
    if (!petalsOpen) return;

    petalsOpen = false;
    isDragging = false;
    isPointerDown = false;
    didMove = false;
    pullVel = 0;

    cancelLongPress();
    cancelIdleSnap();
    closeHud();
    updatePetalVisibility();
    stop();
  }

  window.addEventListener("qi:toggle-petals", () => {
    petalsOpen = !petalsOpen;

    if (!petalsOpen) {
      closePetals();
      return;
    }

    updatePetalVisibility();
    scheduleIdleSnap();
    start();
  });

  // Click-away close (backdrop)
  shell?.addEventListener(
    "pointerdown",
    (e) => {
      if (!petalsOpen) return;

      const t = e.target;
      if (t && hud && hud.contains(t)) return;

      const inPetalSurface =
        t && t.closest && t.closest("[data-petal-surface], .carousel-item");
      if (inPetalSurface) return;

      closePetals();
    },
    { passive: true },
  );

  // Esc closes carousel when HUD isn't open
  window.addEventListener("keydown", (e) => {
    if (e.key !== "Escape") return;
    if (hudOpen) return;
    closePetals();
  });

  const BASE_FRICTION = 0.96;
  const BASE_SNAP = 0.06;
  const velClamp = 3.2;
  const settleThreshold = 0.015;

  let angle = 0;
  let vel = 0;

  // Drag state
  let isDragging = false;
  let isPointerDown = false;
  let didMove = false;

  let lastAngle = null;
  let lastActive = -1;

  let focusedIndex = -1;
  let snapTarget = null;
  let snapElastic = 0;

  let rafId = 0;
  let running = false;

  let pullVel = 0;
  let isPulling = false;

  function getOmPulse() {
    const v = getComputedStyle(document.documentElement).getPropertyValue(
      "--pulse",
    );
    const p = Number(v);
    return Number.isFinite(p) ? p : 0.5;
  }

  let radius = 300;
  const mq = matchMedia("(max-width: 768px)");
  function updateRadius() {
    radius = mq.matches ? 220 : 300;
  }
  mq.addEventListener("change", updateRadius);
  updateRadius();

  const clamp = (n, min, max) => Math.max(min, Math.min(max, n));
  const snapAngle = (a) => Math.round(a / step) * step;
  const normDeg = (d) => ((d % 360) + 360) % 360;

  const angDist = (a, b) => {
    const d = Math.abs(a - b) % 360;
    return d > 180 ? 360 - d : d;
  };

  const smoothstep = (e0, e1, x) => {
    const t = Math.max(0, Math.min(1, (x - e0) / (e1 - e0)));
    return t * t * (3 - 2 * t);
  };

  const SIDE_KILL = 43;
  const SIDE_FADE_END = 52;

  // Remember previous side distances so we can detect crossing events
  const lastSideDist = new Array(count).fill(null);
  let scanLToken = 0;
  let scanRToken = 0;

  function pulseScan(which /* "left" | "right" */, mode /* "out" | "in" */) {
    const front = which === "left" ? scanL : scanR;
    const back = which === "left" ? scanBackLeft : scanBackRight;

    const list = [back, front].filter(Boolean);

    for (const el of list) {
      el.classList.remove("is-pulsing", "is-in", "is-out");
      void el.offsetWidth; // restart animation reliably
      el.classList.add("is-pulsing", mode === "out" ? "is-out" : "is-in");
    }

    // Particles only on the FRONT beam
    if (front) burstParticles(front, which, mode);

    if (front) {
      if (which === "left") front.dataset.pulse = String(++scanLToken);
      else front.dataset.pulse = String(++scanRToken);
    }
  }

  function burstParticles(scanEl, which, mode) {
    const wrap = scanEl.closest(".petal-scan-wrap");
    if (!wrap) return;

    // MUCH more particles
    const N = 64;

    const dir = which === "left" ? -1 : 1;

    const h = wrap.clientHeight || 300;
    const baseY = h * (0.5 + (Math.random() - 0.5) * 0.18);

    // longer linger than beam anim (beam is ~520ms)
    const DURATION = 980;

    for (let i = 0; i < N; i++) {
      const p = document.createElement("i");
      p.className = "petal-particle";

      const y0 = baseY + (Math.random() - 0.5) * 120;
      p.style.top = `${y0}px`;
      p.style.left = `0px`;

      // more "burst": wider, punchier spreads
      const spreadX =
        (34 + Math.random() * 86) * dir * (0.85 + Math.random() * 0.55);
      const spreadY = (Math.random() - 0.5) * 140;

      const fromX = mode === "out" ? 0 : spreadX;
      const toX = mode === "out" ? spreadX : 0;

      const fromY = mode === "out" ? 0 : spreadY;
      const toY = mode === "out" ? spreadY : 0;

      // slightly more granular stagger
      const delay = Math.random() * 160;

      // per-particle flair
      const spin = (Math.random() * 80 - 40) * dir;
      const s0 = 0.9 + Math.random() * 0.35;

      wrap.appendChild(p);

      const anim = p.animate(
        [
          {
            opacity: 0,
            transform: `translate3d(${fromX}px, ${fromY}px, 0) scale(${s0}) rotate(${spin * 0.25}deg)`,
            filter: "blur(0.25px)",
          },
          {
            opacity: 1,
            transform: `translate3d(${fromX * 0.2}px, ${fromY * 0.2}px, 0) scale(${s0 * 1.08}) rotate(${spin * 0.6}deg)`,
            offset: 0.18,
          },
          {
            opacity: 0.85,
            transform: `translate3d(${toX * 0.78}px, ${toY * 0.78}px, 0) scale(${s0 * 0.55}) rotate(${spin}deg)`,
            offset: 0.62,
            filter: "blur(0.65px)",
          },
          {
            opacity: 0,
            transform: `translate3d(${toX}px, ${toY}px, 0) scale(${s0 * 0.25}) rotate(${spin * 1.15}deg)`,
            filter: "blur(1.1px)",
          },
        ],
        {
          duration: DURATION,
          delay,
          easing: "cubic-bezier(0.14, 0.9, 0.18, 1)",
          fill: "forwards",
        },
      );

      anim.onfinish = () => p.remove();
    }
  }

  function snapToIndex(index, immediate = false) {
    const target = -index * step;
    snapTarget = target;

    if (immediate) {
      angle = target;
      vel = 0;
      snapElastic = 0;
      applyTransforms();
      start();
      return;
    }

    const delta = target - angle;
    snapElastic = clamp(delta * 0.12, -18, 18);
    vel = 0;
    start();
  }

  function stripToText(html = "") {
    const tmp = document.createElement("div");
    tmp.innerHTML = String(html);
    return (tmp.innerText || tmp.textContent || "").trim();
  }

  // --- draggable HUD scroll (installed once) ---
  function enableDragScroll(scroller) {
    if (!scroller) return;
    if (scroller.dataset.dragScroll === "1") return;
    scroller.dataset.dragScroll = "1";

    let down = false;
    let startY = 0;
    let startScroll = 0;

    scroller.style.cursor = "grab";

    scroller.addEventListener(
      "pointerdown",
      (e) => {
        if (e.pointerType === "mouse" && e.button !== 0) return;
        down = true;
        startY = e.clientY;
        startScroll = scroller.scrollTop;
        scroller.style.cursor = "grabbing";
        scroller.setPointerCapture?.(e.pointerId);
      },
      { passive: true },
    );

    scroller.addEventListener(
      "pointermove",
      (e) => {
        if (!down) return;
        const dy = e.clientY - startY;
        scroller.scrollTop = startScroll - dy;
      },
      { passive: true },
    );

    function end() {
      down = false;
      scroller.style.cursor = "grab";
    }
    scroller.addEventListener("pointerup", end, { passive: true });
    scroller.addEventListener("pointercancel", end, { passive: true });
  }

  function setHudDataFromItem(el) {
    if (!el || !hud) return;

    const title =
      el.getAttribute("data-title") ||
      el.querySelector(".petal-content h1")?.textContent ||
      "Untitled";

    const desc =
      el.getAttribute("data-desc") ||
      el.querySelector(".petal-content p")?.textContent ||
      "";

    const date = el.getAttribute("data-date") || "";
    const rt = el.getAttribute("data-rt") || "";
    const href = el.getAttribute("data-href") || "#";

    const articleRaw = el.getAttribute("data-article") || "";
    const articleText = stripToText(articleRaw);

    const img = el.getAttribute("data-img") || "";

    if (hudTitle) hudTitle.textContent = title;
    if (hudDesc) hudDesc.textContent = desc;
    if (hudDate) hudDate.textContent = date;
    if (hudRT) hudRT.textContent = rt;

    if (hudLink) {
      hudLink.setAttribute("href", href);
      hudLink.setAttribute("aria-label", `Open ${title}`);
    }

    if (hudArticle)
      hudArticle.textContent = articleText || "No article loaded yet.";
    enableDragScroll(hudArticle);

    if (hudImg) {
      if (img) {
        hudImg.src = img;
        hudImg.alt = title;
        hudImg.style.display = "block";
      } else {
        hudImg.removeAttribute("src");
        hudImg.alt = "";
        hudImg.style.display = "none";
      }
    }
  }

  function clampToViewport(x, y) {
    const pad = 16;
    const vw = window.innerWidth;
    const vh = window.innerHeight;

    const pfBottomVar = getComputedStyle(document.documentElement)
      .getPropertyValue("--pagefind-bottom")
      .trim();

    const pfBottom = Number.parseFloat(pfBottomVar);
    const minY = Number.isFinite(pfBottom) ? pfBottom + 12 : pad;

    const cx = Math.max(pad, Math.min(vw - pad, x));
    const cy = Math.max(minY, Math.min(vh - pad, y));

    return { cx, cy };
  }

  function snapHudToDock(immediate = false) {
    if (!hudOpen || !hud) return;

    const dock = getHudDock();
    if (!dock) {
      hud.style.setProperty("--hud-x", `50%`);
      hud.style.setProperty("--hud-y", `140px`);
      return;
    }

    const r = dock.getBoundingClientRect();
    const x = r.left + r.width * 0.5;
    const y = r.bottom + 12 + 220 * 0.5;

    const { cx, cy } = clampToViewport(x, y);
    hud.style.setProperty("--hud-x", `${cx}px`);
    hud.style.setProperty("--hud-y", `${cy}px`);

    if (immediate) hud.classList.add("no-snap");
    else hud.classList.remove("no-snap");
  }

  function updateHudEffects(activeSideVis = 1) {
    if (!hudOpen || !hud) return;

    const om = getOmPulse();
    hud.style.setProperty("--hud-pulse", String(om));

    hud.style.setProperty("--hud-signal", String(activeSideVis));
    hud.classList.toggle("is-signal-loss", activeSideVis < 0.35);

    const yaw = normDeg(
      (lastActive >= 0 ? lastActive : 0) * step + angle + snapElastic,
    );
    const t = (yaw - 180) / 180;

    const imgX = clamp(t, -1, 1) * 8;
    const imgY = Math.sin((angle * Math.PI) / 180) * 5;

    hud.style.setProperty("--seg-img-x", `${imgX.toFixed(2)}px`);
    hud.style.setProperty("--seg-img-y", `${imgY.toFixed(2)}px`);
    hud.style.setProperty("--seg-title-x", `${(imgX * 0.35).toFixed(2)}px`);
    hud.style.setProperty("--seg-title-y", `${(imgY * 0.35).toFixed(2)}px`);
    hud.style.setProperty("--seg-chips-x", `${(imgX * 0.55).toFixed(2)}px`);
    hud.style.setProperty("--seg-chips-y", `${(imgY * 0.55).toFixed(2)}px`);
    hud.style.setProperty("--seg-article-x", `${(imgX * 0.25).toFixed(2)}px`);
    hud.style.setProperty("--seg-article-y", `${(imgY * 0.25).toFixed(2)}px`);
  }

  window.addEventListener("resize", () => snapHudToDock(true));
  window.addEventListener("scroll", () => snapHudToDock(true), {
    passive: true,
  });

  // --- Long press (HUD only) + drag initiation (carousel) ---
  let pressTimer = 0;
  let pressStartX = 0;
  let pressStartY = 0;

  function cancelLongPress() {
    clearTimeout(pressTimer);
    pressTimer = 0;
  }

  function openHudForIndex(i) {
    const el = items[i];
    if (!el) return;

    if (!petalsOpen) {
      petalsOpen = true;
      updatePetalVisibility();
      start();
    }

    focusedIndex = i;
    snapToIndex(i, false);

    setHudDataFromItem(el);

    setHudOpen(true);
    snapHudToDock(true);
    start();
  }

  // --- idle snap: after 1.6s, pull nearest to center (fluid) ---
  let idleSnapTimer = 0;

  // --- idle auto-snap ---
  let idleTimer = 0;
  const IDLE_SNAP_MS = 1100;

  function bumpIdle() {
    clearTimeout(idleTimer);
    idleTimer = window.setTimeout(() => {
      if (!petalsOpen) return;
      if (hudOpen) return;
      if (isPointerDown || isDragging) return; // don't fight the user
      snapToNearest(false); // fluid snap
    }, IDLE_SNAP_MS);
  }

  function snapToNearest(immediate = false) {
    // find the index whose yaw is closest to "front/center"
    // (your "center" is effectively the active index computed from angle)
    const normalized = ((angle % 360) + 360) % 360;
    const nearest = ((Math.round(-normalized / step) % count) + count) % count;
    snapToIndex(nearest, immediate);
  }

  function cancelIdleSnap() {
    clearTimeout(idleSnapTimer);
    idleSnapTimer = 0;
  }

  function nearestIndexFromAngle() {
    if (!count) return 0;
    const normalized = ((angle % 360) + 360) % 360;
    return ((Math.round(-normalized / step) % count) + count) % count;
  }

  function scheduleIdleSnap() {
    if (!petalsOpen) return;
    cancelIdleSnap();

    idleSnapTimer = window.setTimeout(() => {
      if (!petalsOpen) return;
      if (hudOpen) return;
      if (isPointerDown || isDragging) return;

      const i = nearestIndexFromAngle();
      focusedIndex = i;
      snapToIndex(i, false);
      start();
    }, 1600);
  }

  function armSurfaceInteractions(surfaceEl, index) {
    surfaceEl.addEventListener(
      "pointerdown",
      (e) => {
        if (!petalsOpen) return;
        if (e.pointerType === "mouse" && e.button !== 0) return;
        if (hudOpen) return;

        cancelIdleSnap();

        // arm long press
        isPointerDown = true;
        didMove = false;
        pressStartX = e.clientX;
        pressStartY = e.clientY;

        // immediate focus target (feels "magnetic" even before release)
        focusedIndex = index;
        snapToIndex(index, false);
        start();

        cancelLongPress();
        pressTimer = window.setTimeout(() => {
          // HUD opens only if still down and we did NOT move (no drag)
          if (isPointerDown && !didMove && !hudOpen) openHudForIndex(index);
        }, 420);

        surfaceEl.setPointerCapture?.(e.pointerId);
      },
      { passive: true },
    );

    surfaceEl.addEventListener(
      "pointermove",
      (e) => {
        if (!isPointerDown) return;
        if (hudOpen) return;

        const dx = e.clientX - pressStartX;
        const dy = e.clientY - pressStartY;

        if (!didMove && Math.abs(dx) + Math.abs(dy) > 10) {
          didMove = true;
          cancelLongPress();
          bumpIdle();
          // now we are officially dragging the carousel
          isDragging = true;
          isPulling = false;
          pullVel = 0;
        }
      },
      { passive: true },
    );

    function endPointer() {
      // short click -> ALWAYS snap (fluid) to clicked orb
      if (petalsOpen && !hudOpen && !didMove) {
        focusedIndex = index;
        snapToIndex(index, false);
        start();
      }

      isPointerDown = false;
      cancelLongPress();
      isDragging = false;
      isPulling = false;

      scheduleIdleSnap();
    }

    surfaceEl.addEventListener("pointerup", endPointer, { passive: true });
    surfaceEl.addEventListener("pointercancel", endPointer, { passive: true });

    surfaceEl.addEventListener("keydown", (e) => {
      const el = items[index];
      const href = el?.dataset?.href;

      if (e.key === "Enter" && href) {
        location.href = href;
        return;
      }

      if (e.key === "Escape") {
        if (hudOpen) closeHud();
      }
    });
  }

  function applyTransforms() {
    if (!ring) return;
    if (angle === lastAngle) return;
    lastAngle = angle;

    ring.style.transform = `translateZ(0) rotateY(${angle + snapElastic}deg)`;

    const normalized = ((angle % 360) + 360) % 360;
    const active = ((Math.round(-normalized / step) % count) + count) % count;

    let activeSideVis = 1;

    if (active !== lastActive) {
      lastActive = active;
      items.forEach((el, i) => el.classList.toggle("active", i === active));
      if (hudOpen) setHudDataFromItem(items[active]);
    }

    const maxDist = Math.floor(count / 2 || 1);

    items.forEach((el, i) => {
      let dist = Math.abs(i - active);
      dist = Math.min(dist, count - dist);

      const depth = Math.min(1, dist / maxDist);
      el.style.setProperty("--petal-depth", depth.toFixed(4));
      el.style.setProperty("--petal-prox", (1 - depth).toFixed(4));

      const yawTotal = i * step + angle + snapElastic;
      const yaw = normDeg(yawTotal);

      const d90 = angDist(yaw, 90);
      const d270 = angDist(yaw, 270);
      const sideDist = Math.min(d90, d270);
      const sideVis = smoothstep(SIDE_KILL, SIDE_FADE_END, sideDist);

      const prev = lastSideDist[i];
      if (prev !== null) {
        const crossedIntoKill = prev > SIDE_KILL && sideDist <= SIDE_KILL;
        const crossedOutOfKill = prev <= SIDE_KILL && sideDist > SIDE_KILL;

        if (crossedIntoKill || crossedOutOfKill) {
          const which = d270 < d90 ? "left" : "right";
          const mode = crossedIntoKill ? "out" : "in";
          pulseScan(which, mode);
          // Tell the active orb to "disintegrate" when it hits the scanner boundary
          window.dispatchEvent(
            new CustomEvent("nelumbo:scan", {
              detail: { index: i, which, mode },
            }),
          );
        }
      }
      lastSideDist[i] = sideDist;

      if (i === active) activeSideVis = sideVis;

      const depthVis = 1 - depth * 0.7;
      const finalVis = depthVis * sideVis;
      el.style.opacity = finalVis.toFixed(3);

      el.style.pointerEvents = sideVis < 0.08 ? "none" : "auto";
      el.style.visibility = sideVis < 0.02 ? "hidden" : "visible";

      el.style.setProperty("--item-yaw", `${yawTotal}deg`);

      const PERSPECTIVE = 1200;
      const z = Math.cos((yawTotal * Math.PI) / 180) * radius;
      const sizeFix = (PERSPECTIVE - z) / PERSPECTIVE;

      el.style.setProperty("--size-fix", sizeFix.toFixed(6));

      el.style.transform = `translate(-50%, -50%)
        rotateY(${i * step}deg)
        translateZ(${radius}px)`;
    });

    snapHudToDock(false);
    updateHudEffects(activeSideVis);
  }

  function tick() {
    if (!running) return;

    const om = getOmPulse();
    const breath = (om - 0.5) * 2;

    const friction = BASE_FRICTION * (1 - breath * 0.015);
    const snapStrength = BASE_SNAP * (1 + breath * 0.06);

    angle += vel;
    vel *= friction;

    if (snapTarget !== null) {
      const d = snapTarget - angle;
      angle += d * snapStrength;
      snapElastic *= 0.78;

      if (Math.abs(d) < 0.01 && Math.abs(snapElastic) < 0.2) {
        angle = snapTarget;
        vel = 0;
        snapElastic = 0;
        snapTarget = null;
      }
    }

    if (snapTarget === null && Math.abs(vel) < settleThreshold) {
      const snapped = snapAngle(angle);
      angle += (snapped - angle) * snapStrength;

      if (Math.abs(snapped - angle) < 0.001) {
        angle = snapped;
        vel = 0;
        running = false;
        applyTransforms();
        return;
      }
    }

    applyTransforms();
    rafId = requestAnimationFrame(tick);
  }

  function start() {
    if (running) return;
    running = true;
    rafId = requestAnimationFrame(tick);
  }

  function stop() {
    running = false;
    cancelAnimationFrame(rafId);
  }

  // Drag rotate (works once isDragging is set after move threshold)
  shell?.addEventListener(
    "pointermove",
    (e) => {
      if (!petalsOpen) return;
      if (!isDragging) return;
      if (hudOpen) return;

      vel = clamp(e.movementX * 0.12, -velClamp, velClamp);
      angle += e.movementX * 0.12;

      cancelIdleSnap();
      start();
    },
    { passive: true },
  );

  shell?.addEventListener(
    "pointerup",
    () => {
      isDragging = false;
      isPulling = false;
      isPointerDown = false;
      bumpIdle();
      cancelLongPress();
      scheduleIdleSnap();
    },
    { passive: true },
  );

  shell?.addEventListener(
    "pointercancel",
    () => {
      isDragging = false;
      isPulling = false;
      isPointerDown = false;
      cancelLongPress();
      scheduleIdleSnap();
    },
    { passive: true },
  );

  // Install per-item interactions
  items.forEach((el) => {
    const index = Number(el.dataset.index);
    const surface = el.querySelector("[data-petal-surface]") || el;
    armSurfaceInteractions(surface, index);
  });

  // initial state
  applyTransforms();
  updatePetalVisibility();
  stop();
</script>
